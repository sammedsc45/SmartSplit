<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>SmartSplit</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>SmartSplit</h1>

        <!-- Dark Mode Toggle -->
        <label class="theme-switch">
            <h3>Dark Mode</h3>
            <input type="checkbox" id="theme-toggle">
            <span class="slider"></span>
        </label>

        <!-- Tip Split Form -->
        <form id="tip-form">
            <div>
                <label for="bill-amount">Total Amount</label>
                <input type="number" id="bill-amount" name="bill-amount" required>
            </div>
            <div>
                <input type="radio" id="tip-percentage-radio" name="tip-type" value="percentage" checked>
                <label for="tip-percentage-radio">Tip Percentage</label>
                <input type="radio" id="custom-tip-radio" name="tip-type" value="custom">
                <label for="custom-tip-radio">Custom Tip Amount</label>
            </div>
            <div id="percentage-div">
                <label for="tip-percentage">Tip Percentage</label>
                <input type="number" id="tip-percentage" name="tip-percentage" step="0.01">
            </div>
            <div id="custom-div" style="display: none;">
                <label for="custom-tip">Custom Tip Amount</label>
                <input type="number" id="custom-tip" name="custom-tip" step="0.01">
            </div>
            <div>
                <label for="num-of-people">Number of People</label>
                <input type="number" id="num-of-people" name="num-of-people" required>
            </div>

            <!-- Currency Selection -->
             <div id="currency_roller">
                <div id="base_currency_roller">
                    <label for="base-currency-selector">Base Currency:</label>
                    <select id="base-currency-selector">
                        <option value="INR">Indian Rupee (INR)</option>
                        <option value="USD">US Dollar (USD)</option>
                        <option value="EUR">Euro (EUR)</option>
                        <!-- Add more currencies as needed -->
                    </select>
                </div>
                <div id="base_currency_roller">
                    <label for="target-currency-selector">Target Currency:</label>
                    <select id="target-currency-selector">
                        <option value="INR">Indian Rupee (INR)</option>
                        <option value="USD">US Dollar (USD)</option>
                        <option value="EUR">Euro (EUR)</option>
                        <!-- Add more currencies as needed -->
                    </select>
                </div>
            </div>

            <button type="submit">Calculate</button>
        </form>

        <!-- Results Section -->
        <div id="results">
            <div>
                <label>Total Amount:</label>
                <span id="total-amount"></span>
            </div>
            <div>
                <label>Total Tip:</label>
                <span id="total-tip"></span>
            </div>
            <div>
                <label>Amount Per Person:</label>
                <span id="amount-per-person"></span>
            </div>
            <p id="para">...Don't forget to clear the bills...</p>
        </div>

        <!-- Export Buttons -->
        <div>
            <button id="export-pdf">Export as PDF</button>
            <button type="button" id="reset-btn">Reset</button>
        </div>     
    </div>

    <!-- JavaScript files -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.23/jspdf.plugin.autotable.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/theme.js"></script>
</body>
</html>
